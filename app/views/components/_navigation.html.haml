%header.navigation{:role => "banner"}
  %a{:href=> '#skip-navigation', :tab-index=> 0, :class=>'skip-navigation'}
    Skip Navigation
  = render 'components/cookie_bar'
  .navigation-wrapper
    .moleskine-header
      %a.logo{:href => "http://www.moleskine.com"}
        = inline_svg 'logo-desktop.svg', class:'moleskine-logo'
      .right-group
        .works-with-nav-label
          Works with
          %span.brand
            Moleskine
        %a#js-navigation-mobile-menu.navigation-menu-button{:href => "javascript:void(0)"}
          =icon('fas', 'bars', id:'mobile-nav-icon')
    %nav{:role => "navigation"}
      %ul.navigation-menu
        %li{:class=> 'item with-icon'}
          %a{:href=> home_path, :tab_index=> 0, :class=>'link icon'}
            =icon('fas', 'home', alt:'home')
        %li{:class=> 'item'}
          %a{:href=> works_withs_path, :tab_index=> 0, :class=>'link'}
            Works with
            %span.brand
              Moleskine+
        %li{:class=> 'item'}
          %a{:href=> partners_path, :tab_index=> 0, :class=>'link'} Partners
      %ul#js-navigation-menu.mobile-navigation-menu
        %li{:class=> 'item'}
          %a{:href=> home_path, :tab_index=> 0, :class=>'link'} Home
        %li{:class=> 'item'}
          %a{:href=> works_withs_path, :tab_index=> 0, :class=>'link'}
            Works with
            %span.brand
              Moleskine+
        %li{:class=> 'item'}
          %a{:href=> partners_path, :tab_index=> 0, :class=>'link'} Partners
    %a{:name => 'skip-navigation'}
