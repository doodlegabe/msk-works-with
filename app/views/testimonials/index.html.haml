%ul.breadcrumb
  = render_breadcrumbs :tag=> :li, :separator => ""
.testimonials
  %h1.page-title
    Case Studies
  - promo_counter = 1
  -@testimonials.each do |testimonail|
    -if promo_counter%2 != 0
      .testimonial-promo-listing
        .image
          %a{:href => testimonials_path+'/'+(testimonail.id.to_s)}
            %img{:src => testimonail.promo_image_url, :class=> 'testimonial-promo-image'}
        .text
          %h2{:class => 'testimonial-promo-title'}
            = testimonail.title
          %p
            = testimonail.promo_text.html_safe
          %a{:href => testimonials_path+'/'+(testimonail.id.to_s), :class=>'view-more'}
            View
    -else
      .testimonial-promo-listing
        .text
          %h2{:class => 'testimonial-promo-title'}
            = testimonail.title
          %p
            = testimonail.promo_text.html_safe
          %a{:href => testimonials_path+'/'+(testimonail.id.to_s), :class=>'view-more'}
            View
        .image
          %a{:href => testimonials_path+'/'+(testimonail.id.to_s)}
            %img{:src => testimonail.promo_image_url, :class=> 'testimonial-promo-image'}