%ul.breadcrumb
  = render_breadcrumbs :tag=> :li, :separator => ""
.home
  - if @related_works_with
    .works-with-related
      .related-inner
        %h2.made-with-related-title
          Made with Moleskine+
        .works-with-card-holder
          -@related_works_with.each do |card|
            .works-with-card{:style => "background-image:url(#{card.promo_image_url})", :onclick =>"location.href='#{card.promo_image_url}'"}
              %h2.card-title
                = card.title